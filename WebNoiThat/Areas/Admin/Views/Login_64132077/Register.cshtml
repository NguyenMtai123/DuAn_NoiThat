@{
    ViewBag.Title = "Đăng ký";
    Layout = null;
}
@model WebNoiThat_64132077.Areas.Admin.Models.RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Otika - Admin</title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="/Assets/admin/css/app.min.css">
    <link rel="stylesheet" href="/Assets/admin/bundles/bootstrap-social/bootstrap-social.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="/Assets/admin/css/style.css">
    <link rel="stylesheet" href="/Assets/admin/css/components.css">
    <!-- Custom style CSS -->
    <link rel="stylesheet" href="/Assets/admin/css/custom.css">
    <link rel='shortcut icon' type='image/x-icon' href='/Assets/admin/img/favicon.ico' />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="loader"></div>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                            @TempData["AlertMessage"]
                        </div>
                    }
                    <!-- Thêm TempData["Message"] ở đây -->
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info">
                            @TempData["Message"]
                        </div>
                    }
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="d-flex justify-content-center py-3">
                            <a href="index.html" class="logo d-flex align-items-center w-auto nav-link">
                                <img src="/Assets/admin/img/logo.png" alt="">
                                <span class="d-none d-lg-block">NiceAdmin</span>
                            </a>
                        </div><!-- End Logo -->
                        <div class="card card-primary">
                            <div class="card-body">
                                @using (Html.BeginForm("Register", "Login_64132077", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="pt-3 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Đăng ký tài khoản</h5>
                                        <p class="text-center small">Nhập thông tin để tạo tài khoản mới</p>
                                    </div>
                                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                                    <div class="form-group">
                                        <label for="username">Tài khoản</label>
                                        <div class="input-group has-validation">
                                            <span class="input-group-text" id="inputGroupPrepend">@@</span>
                                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @required = "required", @placeholder = "Username", @autofocus = "autofocus" })
                                            <div class="invalid-feedback">Vui lòng nhập tài khoản.</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <div class="input-group has-validation">
                                            <span class="input-group-text" id="inputGroupPrepend">@@</span>
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = "required", @placeholder = "Email" })
                                            <div class="invalid-feedback">Vui lòng nhập email hợp lệ.</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Mật khẩu</label>
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @required = "required", @placeholder = "Password" })
                                        <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
                                    </div>
                                    <div class="form-group">
                                        <label for="confirmPassword">Xác nhận mật khẩu</label>
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @required = "required", @placeholder = "Confirm Password" })
                                        <div class="invalid-feedback">Vui lòng xác nhận mật khẩu.</div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                            Đăng ký
                                        </button>
                                    </div>
                                    <div class="mt-1 text-muted text-center">
                                        Đã có tài khoản? <a href="/Admin/Login_64132077">Đăng nhập ngay</a>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- General JS Scripts -->
    <script src="/Assets/admin/js/app.min.js"></script>
    <!-- JS Libraies -->
    <!-- Template JS File -->
    <script src="/Assets/admin/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="/Assets/admin/js/custom.js"></script>
    <script src="~/Assets/admin/js/admin.js"></script>
    <script>
        // Sử dụng JavaScript để ẩn thông báo sau 3 giây
        setTimeout(function () {
            // Ẩn các thông báo sau 3 giây
            var alertBox = document.getElementById("AlertBox");
            var messageBox = document.getElementById("MessageBox");
            if (alertBox) {
                alertBox.style.display = 'none';
            }
            if (messageBox) {
                messageBox.style.display = 'none';
            }
        }, 3000);  // 3000ms = 3 giây
    </script>
</body>
</html>
