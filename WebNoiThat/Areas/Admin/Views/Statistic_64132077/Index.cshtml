@model WebNoiThat_64132077.Models.StatisticsViewModel
@{
    ViewBag.Title = "Thống kê đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@section header {
    <div class="content-header">
        <div class="row mb-3">
            <div class="col-sm-6">
                <h3 class="m-0">Thống kê doanh thu</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a style="text-decoration: none" href="/Admin/Home_64132077">Home</a></li>
                    <li class="breadcrumb-item active">Thống kê</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">📊 Thống kê đơn hàng</h2>

    <form method="get" class="row g-3 mb-4 justify-content-center">
        <div class="col-md-3">
            <label class="form-label">Từ ngày:</label>
            <input type="date" name="startDate" class="form-control"
                   value="@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : DateTime.Now.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Đến ngày:</label>
            <input type="date" name="endDate" class="form-control"
                   value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : DateTime.Now.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Lọc</button>
        </div>
    </form>


    <form method="get" action="/Admin/Statistic_64132077/PrintReport" target="_blank" class="text-center mb-4">
        <input type="hidden" name="startDate"
               value="@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "")" />
        <input type="hidden" name="endDate"
               value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "")" />
        <button type="submit" class="btn btn-danger">In Báo Cáo</button>
    </form>


    <!-- Tổng cộng -->
    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>Tổng số đơn:</strong> @Model.TotalOrders</p>
        </div>
        <div class="col-md-6" style="text-align:end">
            <p><strong>Tổng thu nhập:</strong> @Model.TotalIncome.ToString("N0") ₫</p>
        </div>
    </div>

    <!-- Bảng thống kê -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>📅 Ngày</th>
                    <th>🛒 Số lượng đơn</th>
                    <th>💰 Tổng thu nhập (₫)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Statistics)
                {
                    <tr>
                        <td>@item.TimeRange</td>
                        <td>@item.OrderCount</td>
                        <td>@item.TotalIncome.ToString("N0")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Biểu đồ thống kê (giữ nguyên) -->
    <div class="mt-5">
        <h5 class="text-center mb-3">📈 Biểu đồ thống kê</h5>
        <canvas id="statisticsChart" height="100"></canvas>
    </div>
</div>



<script>
    const labels = @Html.Raw(Json.Encode(Model.Statistics.Select(s => s.TimeRange)));
    const orderCounts = @Html.Raw(Json.Encode(Model.Statistics.Select(s => s.OrderCount)));
    const incomes = @Html.Raw(Json.Encode(Model.Statistics.Select(s => s.TotalIncome)));

    const ctx = document.getElementById('statisticsChart').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'Số lượng đơn',
                    data: orderCounts,
                    borderColor: 'blue',
                    backgroundColor: 'rgba(0, 0, 255, 0.1)',
                    fill: true,
                    tension: 0.3
                },
                {
                    label: 'Thu nhập (₫)',
                    data: incomes,
                    borderColor: 'green',
                    backgroundColor: 'rgba(0, 128, 0, 0.1)',
                    fill: true,
                    tension: 0.3
                }
            ]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function (value) {
                            return new Intl.NumberFormat().format(value);
                        }
                    }
                }
            }
        }
    });

    // Tính năng In Báo Cáo
    document.getElementById('printReport').addEventListener('click', function () {
        var printContents = document.querySelector('.table-responsive').innerHTML; // Lấy nội dung bảng thống kê
        var originalContents = document.body.innerHTML;

        // Tạm thời thay thế nội dung body bằng nội dung cần in
        document.body.innerHTML = `
            <html>
                <head>
                    <title>Báo Cáo Thống Kê</title>
                    <style>
                        table {
                            width: 100%;
                            border-collapse: collapse;
                        }
                        table, th, td {
                            border: 1px solid black;
                            text-align: center;
                            padding: 8px;
                        }
                        th {
                            background-color: #f2f2f2;
                        }
                    </style>
                </head>
                <body>
                    <h1>Báo Cáo Thống Kê</h1>
                    ${printContents}
                </body>
            </html>
        `;

        window.print();
        // Khôi phục nội dung body ban đầu
        location.reload();
    });
</script>
